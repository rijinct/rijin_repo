<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
        <modelVersion>4.0.0</modelVersion>
        <groupId>com.tki.nifi-installation</groupId>
        <artifactId>TKI-DSG-NIFI</artifactId>
        <packaging>pom</packaging>
        <version>1.0-SNAPSHOT</version>
        <parent>
                <groupId>com.tki.nifi-tki</groupId>
                <artifactId>NiFi-tki</artifactId>
                <version>1.0-SNAPSHOT</version>
                <relativePath>..</relativePath>
        </parent>
	    <properties>
	        <DSG_HOME>/opt/dsg/dpdb/</DSG_HOME>
                <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	    </properties>
	    <build>
	        <directory>/tmp/target/${project.artifactId}</directory>
	        <finalName>${artifactId}-${version}</finalName>
	        <plugins>
	            <plugin>
	                <groupId>org.apache.maven.plugins</groupId>
	                <artifactId>maven-dependency-plugin</artifactId>
	            </plugin>
	            <plugin>
	                <groupId>org.codehaus.mojo</groupId>
	                <artifactId>rpm-maven-plugin</artifactId>
	                <executions>
	                    <execution>
	                        <phase>package</phase>
	                        <goals>
	                            <goal>rpm</goal>
	                        </goals>
	                    </execution>
	                </executions>
	                <configuration>
	                    <release>${rpm.release}</release>
	                    <distribution>TKI</distribution>
	                    <group>Development/Debuggers</group>
	                    <mappings>
	                        <mapping>
	                            <filemode>775</filemode>
	                            <username>root</username>
	                            <groupname>root</groupname>
	                            <directory>${DSG_HOME}/nifi/concord/</directory>
	                            <configuration>true</configuration>
	                            <sources>
	                                <source>
	                                    <location>concord/</location>
	                                </source>
	                            </sources>
	                        </mapping>

	                        <mapping>
	                            <filemode>775</filemode>
	                            <username>root</username>
	                            <groupname>root</groupname>
	                            <directory>${DSG_HOME}/nifi/origins/</directory>
	                            <configuration>true</configuration>
	                            <sources>
	                                <source>
	                                    <location>origins/</location>
	                                </source>
	                            </sources>
	                        </mapping>		

							<mapping>
	                            <filemode>775</filemode>
	                            <username>root</username>
	                            <groupname>root</groupname>
	                            <directory>${DSG_HOME}/nifi/common/</directory>
	                            <configuration>true</configuration>
	                            <sources>
	                                <source>
	                                    <location>common/</location>
	                                </source>
	                            </sources>
	                        </mapping>					
								
	                    </mappings>
	                </configuration>
	            </plugin>
	        </plugins>
	    </build>

</project>
